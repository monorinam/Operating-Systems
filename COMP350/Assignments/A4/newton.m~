n = 0;
fx1 = feval(fname,x1);
fx0 = feval(fname,x0);
if display, 
   disp('   n             x                    f(x)')
   disp('------------------------------------------------------')
   disp(sprintf('%4d %23.15e %23.15e', n, x, fx))
end
if abs(fx) <= ftol
   root = x;
   return
end
for n = 1:n_max
    d = (x1-x0)*fx1/(fx1-fx0); 
    x0 = x1;
    fx0 = fx1;
    x1 = x1 - d;
    fx1 = feval(fname,x1);
    if display, 
       disp(sprintf('%4d %23.15e %23.15e', n, x, fx)), end
    if (abs(d) <= xtol || abs(fx) <= ftol)
       root = x1;
       return
    end
end
root = x1;